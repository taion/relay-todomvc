{
  "private": true,
  "scripts": {
    "lint": "eslint src tools",
    "relay-compiler": "relay-compiler --watchman false --src src --exclude 'data/**' --schema src/data/schema.graphql",
    "start": "npm run relay-compiler && babel-node src/server",
    "update-schema": "babel-node tools/updateSchema.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npm run update-schema",
      "git add src/data/schema.*"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@4c/babel-preset": "^7.2.4",
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "babel-loader": "^8.0.6",
    "babel-plugin-relay": "^8.0.0",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^2.6.11",
    "eslint": "^6.7.2",
    "eslint-config-4catalyzer-react": "^1.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "farce": "^0.2.8",
    "found": "^0.4.9",
    "found-relay": "^0.6.0",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "husky": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "keycode": "^2.2.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-relay": "^8.0.0",
    "react-relay-network-modern": "~4.2.0",
    "react-relay-network-modern-ssr": "~1.2.4",
    "regenerator-runtime": "^0.13.3",
    "relay-compiler": "^8.0.0",
    "relay-runtime": "^8.0.0",
    "serialize-javascript": "^2.1.1",
    "todomvc-app-css": "^2.3.0",
    "todomvc-common": "^1.0.5",
    "webpack": "^4.41.4",
    "webpack-dev-middleware": "^3.7.2"
  }
}
